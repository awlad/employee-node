form(method='#{form_method}', action="#{action_path}")
    table(cellpadding="11")
        tr
            td.label Name
            td
                input(type="text", name="name", value= data ? data.name : '')
        tr
            td.label Email
            td
                input(type="email", name="email", value=data ? data.email : '')
        tr
            td.label Position
            td
                input(type="text", name="position", value=data ? data.position : '')
        tr
            td.label(valign="top") Address
            td
                textarea(name="address",cols="30" rows="5")= data ? data.address : ''
        tr
            td(class="label")
            td
                input(type="submit", name="submit", value="Save")